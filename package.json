{
  "name": "remark-reference-links",
  "version": "4.0.1",
  "description": "Transform links and images into references and definitions",
  "license": "MIT",
  "keywords": [
    "link",
    "image",
    "to",
    "reference",
    "definition",
    "remark"
  ],
  "repository": "wooorm/remark-reference-links",
  "bugs": "https://github.com/wooorm/remark-reference-links/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
    "An Ko <an@cyan.io>"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^11.0.0",
    "remark": "^7.0.0",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "tape": "^4.0.0",
    "xo": "^0.18.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js --no-builtins -s remarkReferenceLinks > remark-reference-links.js",
    "build-mangle": "esmangle remark-reference-links.js > remark-reference-links.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "remark-reference-links.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
