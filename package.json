{
  "name": "remark-reference-links",
  "version": "2.0.1",
  "description": "Transform links and images into references and definitions",
  "license": "MIT",
  "keywords": [
    "link",
    "image",
    "to",
    "reference",
    "definition",
    "remark"
  ],
  "dependencies": {
    "unist-util-visit": "^1.0.0"
  },
  "repository": "wooorm/remark-reference-links",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^12.0.0",
    "eslint": "^1.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.0.0",
    "remark": "^3.0.0",
    "remark-comment-config": "^2.0.0",
    "remark-github": "^2.0.0",
    "remark-lint": "^2.0.0",
    "remark-slug": "^3.0.0",
    "remark-usage": "^2.0.0",
    "remark-validate-links": "^2.0.0",
    "tape": "^4.0.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --no-builtins -s remarkReferenceLinks > remark-reference-links.js",
    "build-mangle": "esmangle remark-reference-links.js > remark-reference-links.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "test-api": "node test.js",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  }
}
